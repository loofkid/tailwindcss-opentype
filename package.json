{
  "name": "tailwindcss-opentype",
  "version": "1.1.0",
  "description": "Tailwind CSS utility classes for advanced typographic features.",
  "keywords": [
    "tailwindcss",
    "tailwindcss-plugin",
    "opentype",
    "font features",
    "typography"
  ],
  "homepage": "https://tailwindcss-opentype.netlify.app",
  "repository": "stormwarning/tailwindcss-opentype",
  "license": "ISC",
  "author": "Jeff Nelson <rustyangel@gmail.com> (https://tidaltheory.io)",
  "main": "dist/index.ts",
  "type": "module",
  "files": [
    "dist"
  ],
  "scripts": {
    "build:docs": "NODE_ENV=production npm run build && eleventy --config=docs/.eleventy.js",
    "changeset": "changeset add",
    "dev": "TAILWIND_MODE=watch eleventy --config=docs/.eleventy.js --serve",
    "lint": "tsdx lint",
    "start": "tsdx watch",
    "test": "tsdx test"
  },
  "husky": {
    "hooks": {}
  },
  "lint-staged": {
    "*.{js,ts}": "eslint --fix",
    "package.json": "prettier --write"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "devDependencies": {
    "@11ty/eleventy": "2.0.1",
    "@11ty/eleventy-navigation": "0.3.5",
    "@11ty/eleventy-plugin-syntaxhighlight": "5.0.0",
    "@changesets/changelog-github": "0.5.0",
    "@changesets/cli": "2.27.7",
    "@fec/eleventy-plugin-remark": "4.0.0",
    "@navith/tailwindcss-plugin-author-types": "1.8.1-0.1",
    "@tailwindcss/typography": "0.5.13",
    "@zazen/eslint-config": "6.8.0",
    "autoprefixer": "10.4.19",
    "dedent": "1.5.3",
    "eslint": "9.7.0",
    "husky": "9.1.1",
    "import-sort-style-python": "1.0.2",
    "jest-diff": "29.7.0",
    "lint-staged": "15.2.7",
    "postcss": "8.4.39",
    "postcss-cli": "11.0.0",
    "prettier": "3.3.3",
    "prettier-plugin-import-sort": "0.0.7",
    "prettier-plugin-packagejson": "2.5.1",
    "prismjs": "1.29.0",
    "rehype-parse": "9.0.0",
    "remark-autolink-headings": "7.0.1",
    "remark-directive": "3.0.0",
    "remark-slug": "7.0.1",
    "tailwindcss": "3.4.6",
    "tsdx": "0.14.1",
    "tslib": "2.6.3",
    "typescript": "5.5.3",
    "unified": "11.0.5"
  },
  "peerDependencies": {
    "tailwindcss": ">= 3"
  },
  "engines": {
    "node": ">=12"
  },
  "importSort": {
    ".js,.ts": {
      "parser": "babylon",
      "style": "python"
    }
  }
}
